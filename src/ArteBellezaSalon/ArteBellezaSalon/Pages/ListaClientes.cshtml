@page
@model ArteBellezaSalon.Pages.ListaClientesModel
@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>Lista de Clientes Registrados</h2>

<!-- Mostrar mensaje de éxito -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="get" class="row g-3 mb-3">
    <div class="col-md-6">
        <input type="text" name="Busqueda" class="form-control" placeholder="Buscar por nombre, cédula, email..." value="@Model.Busqueda" />
    </div>
    <div class="col-md-3">
        <select name="FiltroTipo" class="form-select">
            <option value="">Todos los tipos</option>
            <option value="Cliente" selected="@(Model.FiltroTipo == "Cliente")">Cliente</option>
            <option value="Proveedor" selected="@(Model.FiltroTipo == "Proveedor")">Proveedor</option>
            <option value="Invitado" selected="@(Model.FiltroTipo == "Invitado")">Invitado</option>
        </select>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-success w-100">Filtrar</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td>@cliente.Cedula</td>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellido</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Tipo</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page="/EditarCliente" asp-route-id="@cliente.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-page="/EliminarCliente" asp-route-id="@cliente.Id" onclick="return confirm('¿Desea eliminar este cliente?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
